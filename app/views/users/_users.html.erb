<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
          <div class="media-body">
            <div>
              <%= user.name %>
            </div>
            <div>
              <p><%= link_to 'View profile', user_path(user) %></p>
            </div>
            <div>
              <% if current_user == user.user %>
                <%= link_to "Delete", user, method: :delete,data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
              <% end %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>